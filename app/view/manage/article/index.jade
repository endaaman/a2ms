h2.nomt 記事の管理
p
    a(href="/manage/article/new") 記事の追加

table.table(v-if="resolved")
    thead
        tr
            th.text-left タイトル
            th タグ
            th カテゴリ
            th 状態
            th 貼付け用
            th
    tbody
        tr(v-repeat="article: articles" track-by="_id")
            td
                a(href="/manage/article/{{article._id}}") {{article.title_ja}}
            td
                .tips(v-if="article.tags.length > 0")
                    .tip(v-repeat="tag: tags | tagId article.tags")
                        a(href="/manage/tag/{{tag._id}}") {{tag.name_ja}}
                span.text-muted(v-if="article.tags.length < 1") タグなし
            td.text-center
                | {{getCat(article).name_ja}}
            td.text-center
                span(v-if="article.draft") 下書き
                span(v-if="!article.draft") 公開
            td.nobr
                ul.list-inline
                    li
                        button.btn.btn-small.btn-blue(
                            v-copy="mdUrlJa(article)"
                            v-on="aftercopy: onCopied($event)") 和題
                    li
                        button.btn.btn-small.btn-blue(
                            v-copy="mdUrlEn(article)"
                            v-on="aftercopy: onCopied($event)") 英題
            td.nobr
                a(href="/article/{{article.slug}}") 記事ページ
